pipeline{
    agent any
    tools{
        maven'maven3.9.8'
    }
    stages {
        stage("build") {
            steps {
                echo 'Compiling worker app'
                dir('worker') {
                    sh 'mvncompile'
                }
            }
        }
        stage("test") {
            steps {
                echo 'Running Unit Tests on worker app'
            }
        }
        stage("package") {
            steps {
                echo 'Packagingworkerapp'
            }
        }
    }
    post {
        always {
            echo 'Building multibranch pipeline for worker is completed..'
        }
    }
}
